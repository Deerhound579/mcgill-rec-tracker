{
  "name": "My Recordings",
  "short_name": "myRecordings",
  "version": "0.0.2",
  "description": "Manage recordings for McGill students",
  "permissions": ["storage", "*://mycourses2.mcgill.ca/*"],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://lrs.mcgill.ca/*"],
      "css": ["inject.css"],
      "js": ["inject.js"]
    }
  ],
  "page_action": {
    "default_icon": {
      "16": "icons/icon/duck-16.png",
      "32": "icons/icon/duck-32.png",
      "48": "icons/icon/duck-48.png",
      "128": "icons/icon/duck-128.png"
    }
  },
  "icons": {
    "16": "icons/logo/duck-16.png",
    "32": "icons/logo/duck-32.png",
    "48": "icons/logo/duck-48.png",
    "128": "icons/logo/duck-128.png"
  },
  "manifest_version": 2
}
