{
  "name": "McGill Recording Tracker",
  "short_name": "mcgill-rec-tracker",
  "version": "1.0",
  "description": "Track recordings for McGill students",
  "permissions": ["storage", "webRequest", "tabs", "*://*.mcgill.ca/*"],
  "background": {
    "scripts": ["background.js", "hot-reload.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://lrs.mcgill.ca/*"],
      "css": ["inject.css"],
      "js": ["inject.js"]
    }
  ],
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
